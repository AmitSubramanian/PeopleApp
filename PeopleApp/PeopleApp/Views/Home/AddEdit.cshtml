@model PeopleApp.ViewModels.AddEditDelete

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-6">
        <partial name="~/Views/Shared/_Alerts.cshtml" />
        <form asp-controller="Home" asp-action="@(Model.PersonId == Guid.Empty ? "Add" : "Edit")" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="PersonId" type="hidden" />
            <div class="form-group focus">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Active:</label>&nbsp;&nbsp;
                <input asp-for="IsActive" type="checkbox" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <input asp-for="LastUpdatedDttm" type="hidden" />
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-md-3">
                        <button class="btn-primary" type="submit">Submit</button>
                    </div>
                    <div class="col-md-3">
                        <button class="btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Home")'">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />

    <script language="javascript">
        $(document).ready(function () {
            $('.focus :input').focus();
        });
    </script>
}
