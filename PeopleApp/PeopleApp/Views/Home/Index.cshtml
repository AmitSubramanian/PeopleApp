@model IEnumerable<PeopleApp.ViewModels.ReadPerson>
@{
    ViewData["Title"] = "People List";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <partial name="~/Views/Shared/_Alerts.cshtml" />
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    &nbsp;
                </div>
            </div>
            <div class="row border-top border-bottom">
                <div class="col-md-4"><strong>Name</strong></div>
                <div class="col-md-4"><strong>Email</strong></div>
                <div class="col-md-2"><strong>Active</strong></div>
                <div class="col-md-1">&nbsp;</div>
                <div class="col-md-1">&nbsp;</div>
            </div>
            @if (Model.Count() > 0)
            {
                @foreach (var p in Model)
                {
                    <div class="row border-bottom">
                        <div class="col-md-4">@p.Name</div>
                        <div class="col-md-4">@p.Email</div>
                        <div class="col-md-2">@(p.IsActive ? "Yes" : "No")</div>
                        <div class="col-md-1"><a href="@Url.Action("Edit", "Home", new { personid = p.PersonId })">Edit</a></div>
                        <div class="col-md-1">`<a href="@Url.Action("Delete", "Home", new { personid = p.PersonId })">Delete</a></div>
                    </div>
                }
            }
            else
            {
                <div class="row border-bottom">
                    <div class="col">No people in your list.</div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-md-12">
                <button class="btn-primary" type="submit" onclick="location.href='@Url.Action("Add", "Home")'">Add Person</button>
            </div>
        </div>
    </div>
</div>
